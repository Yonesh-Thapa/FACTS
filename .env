# Database Configuration (SQLite for local development)
DATABASE_URL=sqlite:///facts_local.db

# Flask Configuration
FLASK_ENV=development
SESSION_SECRET=dev-secret-key-change-in-production

# Security Configuration
WTF_CSRF_SECRET_KEY=dev-csrf-secret-key
WTF_CSRF_TIME_LIMIT=3600
PERMANENT_SESSION_LIFETIME=86400
SESSION_COOKIE_SAMESITE=Lax
SESSION_COOKIE_SECURE=False

# Email Configuration (for testing)
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
ADMIN_EMAIL=admin@facts.local
SECONDARY_ADMIN_EMAIL=backup@facts.local

# SendGrid Configuration (optional for local dev)
SENDGRID_API_KEY=your-sendgrid-api-key

# OpenAI Configuration (optional for local dev)
OPENAI_API_KEY=your-openai-api-key

# Stripe Configuration (for future payment processing)
STRIPE_PUBLISHABLE_KEY=pk_test_your_key
STRIPE_SECRET_KEY=sk_test_your_key

# Analytics & Tracking
GOOGLE_ANALYTICS_ID=GA4-measurement-id

# Performance & Caching (simple cache for development)
REDIS_URL=redis://localhost:6379/0
CACHE_TYPE=simple
CACHE_DEFAULT_TIMEOUT=300

# Rate Limiting (memory for development)
RATELIMIT_STORAGE_URL=memory://
RATELIMIT_DEFAULT=100 per hour

# Logging & Monitoring
LOG_LEVEL=DEBUG
LOG_FILE=logs/app.log
SENTRY_DSN=your-sentry-dsn-for-error-tracking

# File Upload Limits
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=static/uploads

# API Configuration
API_RATE_LIMIT=60 per minute
CHATBOT_RATE_LIMIT=20 per minute
